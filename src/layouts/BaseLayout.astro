---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  author?: string;
}

const {
  title,
  description = "Unpolished blog of Fayaz Ahmed - Creative developer sharing insights on web development, design, and technology.",
  image = "/og-image.jpg",
  article = false,
  publishedTime,
  modifiedTime,
  tags = [],
  author = "Fayaz Ahmed"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);

// JSON-LD structured data
const jsonLD = {
  "@context": "https://schema.org",
  "@type": article ? "BlogPosting" : "WebSite",
  "headline": title,
  "description": description,
  "image": socialImage.href,
  "url": canonicalURL.href,
  "datePublished": publishedTime,
  "dateModified": modifiedTime || publishedTime,
  "author": {
    "@type": "Person",
    "name": author,
    "url": "https://fayazahmed.github.io/fayaz.dev"
  },
  "publisher": {
    "@type": "Person",
    "name": author,
    "url": "https://fayazahmed.github.io/fayaz.dev"
  },
  ...(tags.length > 0 && { "keywords": tags.join(", ") })
};
