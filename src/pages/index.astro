---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import HeroAnimation from '@/components/HeroAnimation';
import SubscribeModal from '@/components/SubscribeModal';
import QuoteGenerator from '@/components/QuoteGenerator';
import { getCollection } from 'astro:content';
import yaml from 'js-yaml';
import fs from 'fs';

// Get recent blog posts
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

// Load tools data
const toolsData = yaml.load(fs.readFileSync('src/data/tools.yaml', 'utf8')) as any;
---

<BaseLayout title="Fayaz Ahmed - Creative Developer">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <HeroAnimation client:load />
      </div>
      
      <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
        <h1 class="text-4xl sm:text-6xl lg:text-7xl font-display font-bold text-gray-900 dark:text-white mb-6 animate-fade-in">
          Creative
          <span class="bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent">
            Developer
          </span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-300 mb-8 animate-slide-up max-w-2xl mx-auto">
          Building beautiful, accessible, and performant web experiences with modern technologies
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up">
          <a 
            href="/blog" 
            class="bg-gradient-to-r from-primary-600 to-accent-600 hover:from-primary-700 hover:to-accent-700 text-white font-medium px-8 py-3 rounded-lg transition-all duration-200 transform hover:scale-105"
          >
            Read My Blog
          </a>
          <button 
            id="subscribe-btn"
            class="border-2 border-primary-600 text-primary-600 dark:text-primary-400 dark:border-primary-400 hover:bg-primary-600 hover:text-white dark:hover:bg-primary-400 dark:hover:text-gray-900 font-medium px-8 py-3 rounded-lg transition-all duration-200"
          >
            Subscribe
          </button>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-gentle">
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>
    
    <!-- Featured Posts Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 dark:text-white mb-4">
            Recent Articles
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Insights on web development, design patterns, and modern technologies
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recentPosts.map((post) => (
            <article class="bg-white dark:bg-gray-900 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden group">
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-3">
                  <time datetime={post.data.publishDate.toISOString()}>
                    {post.data.publishDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <span class="mx-2">â€¢</span>
                  <span>{post.data.readingTime || '5 min read'}</span>
                </div>
                
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                
                <div class="flex flex-wrap gap-2 mb-4">
                  {post.data.tags?.slice(0, 3).map((tag: string) => (
                    <span class="px-2 py-1 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 text-xs rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors"
                >
                  Read more
                  <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href="/blog" 
            class="inline-flex items-center bg-primary-600 hover:bg-primary-700 text-white font-medium px-6 py-3 rounded-lg transition-colors"
          >
            View All Articles
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
    
    <!-- About Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 dark:text-white mb-6">
              About the Author
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
              I'm Fayaz Ahmed, a creative developer passionate about building exceptional web experiences. 
              With expertise in modern JavaScript frameworks, design systems, and performance optimization, 
              I help teams create products that users love.
            </p>
            <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
              When I'm not coding, you'll find me exploring new technologies, contributing to open source, 
              or sharing knowledge through writing and speaking at conferences.
            </p>
            <a 
              href="/about" 
              class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium text-lg transition-colors"
            >
              Learn more about me
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          
          <div class="space-y-6">
            <QuoteGenerator client:load />
            
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                Current Status
              </h3>
              <div class="space-y-3">
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-gray-600 dark:text-gray-300">Available for new projects</span>
                </div>
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                  <span class="text-gray-600 dark:text-gray-300">Learning Advanced Three.js</span>
                </div>
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
                  <span class="text-gray-600 dark:text-gray-300">Building fayaz.dev</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Developer Toolbox Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-display font-bold text-gray-900 dark:text-white mb-4">
            Developer Toolbox
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Technologies and tools I use to build amazing web experiences
          </p>
        </div>
        
        <div class="space-y-12">
          {toolsData.categories.map((category: any) => (
            <div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
                {category.name}
              </h3>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                {category.tools.map((tool: any) => (
                  <a 
                    href={tool.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-white dark:bg-gray-900 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-md transition-all duration-200 group"
                  >
                    <div class="flex items-center mb-2">
                      <span class="text-2xl mr-3">{tool.icon}</span>
                      <h4 class="font-medium text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                        {tool.name}
                      </h4>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-300">
                      {tool.description}
                    </p>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  
  <!-- Subscribe Modal -->
  <SubscribeModal client:load isOpen={false} onClose={() => {}} />
  
  <script>
    // Subscribe modal functionality
    const subscribeBtn = document.getElementById('subscribe-btn');
    const subscribeModal = document.querySelector('astro-island[component-export="default"]');
    
    subscribeBtn?.addEventListener('click', () => {
      // This would need to be implemented with a proper state management solution
      // For now, we'll use a simple approach
      console.log('Subscribe button clicked');
    });
  </script>
</BaseLayout>